@import 'partials/buttons'

body
	font-family 'Roboto', sans-serif
	margin 0

nav
	padding 15px 0
	display flex
	align-items center
	margin-left 15px

	& > *
		margin-right 30px

	& .btn
		width 190px

#logo
	display flex
	align-items center

	img
		height 80px

	h1
		font-size 50px
		margin 0
		color transparent
		text-shadow 0 0 8px rgba(0,0,0,0.5)


main
	width 600px
	margin-left 15px
	height calc(100vh - 110px)

.block-site
	display flex

	input
		flex-grow 1
		font-size 20px
		margin-right 30px
	
	button
		flex-grow 0

.site-list
	width 100%
	display flex
	flex-wrap wrap
	height 100%
	overflow-y scroll
	

.site
	flex-basis 100%
	display flex
	align-items center
	justify-content space-between
	
	button
		flex-grow 0
	p
		font-size 20px
	 	flex-grow 1
		flex-basis 100%