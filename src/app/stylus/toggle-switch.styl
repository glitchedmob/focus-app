$height = 75px
$width = 200px

.toggle-checkbox
	display none
	visibility none

.toggle,
.toggle-button,
.toggle-content
	transition all 300ms ease-in-out

.toggle-viewport
	display block
	height $height
	overflow hidden
	width $width
	position relative
	margin 30px auto 0
	cursor pointer

.toggle
	height 100%
	position relative
	width 200%

.toggle-button
	box-sizing border-box
	background-color #F2F2F2
	position absolute
	display block
	top 0
	height $height
	width $height
	cursor pointer

.toggle-content
	box-shadow rgba(0, 0, 0, 0.2) 0 0 5px inset
	background rgba(157, 38, 29, 0.5)
	cursor pointer
	display inline-block
	float left 
	height 100%
	width ($width - ($height / 2))
	font-size ($height / 2)
	font-weight bold
	text-transform uppercase
	top 10px

	span
		text-shadow rgba(0, 0, 0, 0.1) 1px 1px 2px
		height 100%
		line-height $height
		margin 0 20px
		float left

.toggle-left
	background-color #59BDFF
	
.toggle-right
	background-color #FF4F51

	span
		float right

.toggle-checkbox
	
	& + .toggle-viewport 

		> .toggle
			left 0

		.toggle-button
			left ($width - $height)

		.toggle-content
			width ($width - ($height / 2))
		
		.toggle-left
			margin-left 0
	
	&:checked + .toggle-viewport 

		> .toggle
			left -100%
	
		.toggle-button
			left $width
		
		.toggle-left
			margin-left $height
	