$top-bottom-padding = 12px
$right-left-padding = 40px

.btn
	font-size 18px
	display inline-block
	padding 12px 40px
	transition all 500ms cubic-bezier(0.25, 0.8, 0.25, 1)
	text-decoration none
	border none
	
	&:hover,
	&:focus
		text-decoration none
		cursor pointer
		box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23)

.btn-primary
	background linear-gradient(253.64deg, #2B32B2 0%, #1488CC 100%)
	color #FFF


.btn-primary-outline
	$border-width = 4px

	// Border gradient
	padding ($top-bottom-padding - $border-width) ($right-left-padding - $border-width)
	background-color transparent
	border $border-width solid
	border-image linear-gradient(253.64deg, #2B32B2 0%, #1488CC 100%) 10

	span
		// Text gradient
		background linear-gradient(253.64deg, #2B32B2 0%, #1488CC 100%)
		-webkit-background-clip text
		-webkit-text-fill-color transparent
		color transparent
		background-clip text

.btn-danger
	background linear-gradient(253.64deg, #EB3349 0%, #F45C43 100%)
	color #FFF

.btn-circle
	padding 0
	border-radius 500px
	width 50px
	height 50px
	text-align center
	
	&:focus
		outline none

	span
		font-size 55px
		font-family 'Roboto', sans-serif
		font-weight 300
		position relative

		&.close
			top -10px
		
		&.plus
			top -7.5px